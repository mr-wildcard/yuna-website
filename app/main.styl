font-family-playfair = 'Playfair Display', serif
font-family-lato = 'Lato', sans-serif
header-height = 110px
footer-height = 50px
nav-button-height = 250px

*
  box-sizing border-box

p
  margin 0

a
  text-decoration none

  &:visited
    color: inherit

.clearfix
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

html, body
  width 100%
  height 100%
  font-size 16px

.header
  width 100%
  height 110px

  background green

.content
  overflow hidden
  width 100%
  min-height 600px
  height "calc(100% - %s)" % (header-height  + footer-height)
  transform-style preserve-3d

  div
    height 100%

  .part
    overflow hidden
    float left
    width 50%
    height 100%

    transform-style preserve-3d
    transform skew(-10deg)

    .rotate
      transform skew(10deg)

    nav
      position relative
      top 50%
      transform translateY(-50%)

      a
        display inline-block
        width 200px
        height nav-button-height
        font-family font-family-playfair
        font-style italic
        font-size 1.5em
        text-align center
        color #fff

    &.content-left

      nav
        float right
        background blue
        margin-right -50px

    &.content-right
      border-left 1px solid black

      nav
        float left
        background red
        margin-left -50px

.footer
  width 100%
  height 50px

  background orange