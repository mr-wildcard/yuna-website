@import "fonts"

font-family-playfair = 'Playfair Display', serif
font-family-lato = 'Lato', sans-serif
header-height = 110px
footer-height = 50px
nav-button-height = 250px

*
  box-sizing border-box

p
  margin 0

a
  color inherit
  text-decoration none

  &:visited
    color: inherit

.clearfix
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

html, body
  width 100%
  height 100%
  font-size 16px
  font-family font-family-lato

header
  position absolute
  z-index 2
  padding 60px 0 0 30px

  h1
    margin 0

  .name
    padding-right 10px
    text-transform uppercase
    font-weight 700
    font-size 45px
    line-height 56px

  .job
    font-family font-family-playfair
    font-style italic
    font-size 51px
    line-height 51px

.main-content
  position relative
  height: 100%
  overflow-y hidden
  opacity 0
  font-size 1.5rem
  text-align justify
  border-top: 130px solid white
  border-right: 30px solid white
  border-bottom: 75px solid white
  border-left: 30px solid white
  transition opacity 1s ease

  span
    transition color 150ms ease
    cursor default

    &:hover
      color: #000 !important

      .hashtag
        color: #1D946E !important

      .link
        text-decoration underline

    &.hashtag
      color: inherit

    .link
      color: inherit
      font-style italic

      &:visited,
      &:focus,
      &:active
        color: inherit
        outline none

  .content-border
    position absolute
    top 0
    width 100%
    height 100%
    pointer-events: none

.yuna
  position absolute
  top 50%
  left 50%
  margin-left -150px
  margin-top -150px
  font-weight bold

  img
    position absolute
    border-radius 190px
    border 30px solid white

    &.hello
      transition opacity 1s ease

footer
  position absolute
  bottom 15px
  right 30px
  background-color white

  .hey-you
    float left
    padding-right 20px
    line-height 49px
    font-family font-family-playfair
    font-style italic
    font-size 24px

  a
    color: #000000
    float left
    font-size 36px
    margin 0 8px
    transition color 250ms ease

    &:last-child
      margin-right 0

    &:hover
      color #1D946E

    &.mail, &.pinterest
      font-size 31px
      line-height 45px

    &.linkedin
      margin-left 8px
      font-size 33px
      line-height 41px