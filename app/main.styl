font-family-playfair = 'Playfair Display', serif
font-family-lato = 'Lato', sans-serif
header-height = 110px
footer-height = 50px
nav-button-height = 250px

*
  box-sizing border-box

p
  margin 0

a
  text-decoration none

  &:visited
    color: inherit

.clearfix
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

html, body
  width 100%
  height 100%
  font-size 16px
    height 100%
