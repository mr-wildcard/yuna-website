@import "normalize"
@import "fonts"

xs()
  @media screen and (max-width: 35.5em)
    {block}

md()
  @media screen and (min-width: 35.5em) and (max-width: 64em)
    {block}

font-family-playfair = 'Playfair Display', serif
font-family-lato = 'Lato', sans-serif
header-height = 110px
footer-height = 50px
nav-button-height = 250px

*
  box-sizing border-box

p
  margin 0

a
  color inherit
  text-decoration none

  &:visited
    color: inherit

.clearfix
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

html, body
  width 100%
  height 100%
  font-size 16px
  font-family font-family-lato

.wrapper
  position relative
  height 100%

  +md()
    height 450px

header
  position absolute
  z-index 2
  padding 60px 0 0 30px

  +xs()
    padding 17px 0 0 20px

  h1
    margin 0

  .name
    padding-right 10px
    text-transform uppercase
    font-weight 700
    font-size 45px
    line-height 56px

  .job
    font-family font-family-playfair
    font-style italic
    font-size 51px
    line-height 51px

    +xs()
      line-height 46px

  .job, .name
    +xs()
      padding 0
      display block
      font-size 32px
      line-height 32px

.main-content
  position relative
  height: 100%
  overflow-y hidden
  opacity 0
  font-size 1.5rem
  text-align justify
  border-top: 130px solid white
  border-right: 30px solid white
  border-bottom: 75px solid white
  border-left: 30px solid white
  transition opacity 1s ease

  +xs()
    overflow hidden
    font-size 1rem
    border-top-width: 100px
    border-right-width: 20px
    border-bottom-width: 55px
    border-left-width: 20px

  span
    transition color 150ms ease
    cursor default

    &:hover
      color: #000 !important

      .hashtag
        color: #1D946E !important

      .link
        text-decoration underline

    &.hashtag
      color: inherit

    .link
      color inherit
      font-style italic

      &:visited,
      &:focus,
      &:active
        color: inherit
        outline none

  .content-border
    position absolute
    top 0
    width 100%
    height 100%
    pointer-events: none

.yuna
  position absolute
  top 50%
  left 50%
  margin-left -160px
  margin-top -160px
  font-weight bold

  +xs()
    top calc(50% + 25px)
    margin-left -170px
    margin-top -170px

  img
    position absolute
    border-radius 190px
    border 30px solid white
    transform-origin 50% 50%

    +xs()
      transform scale(0.7)
      border-width 20px

    &.hello
      transition opacity 1s ease

footer
  position absolute
  bottom 15px
  right 30px
  background-color white

  +xs()
    bottom 0
    width 100%
    left 0
    padding-left 20px
    padding-bottom 5px
    background-color transparent

  .hey-you
    float left
    padding-right 20px
    line-height 49px
    font-family font-family-playfair
    font-style italic
    font-size 24px

    +xs()
      display none

  a
    color: #000000
    float left
    font-size 36px
    margin 0 8px
    transition color 250ms ease

    +xs()
      margin 0 9px

    &:last-child
      margin-right 0

    &:hover
      color #1D946E

    &.mail
      +xs()
        margin-left 0

    &.mail, &.pinterest
      font-size 31px
      line-height 45px

      +xs()
        font-size 29px

    &.linkedin
      margin-left 8px
      font-size 33px
      line-height 41px