font-family-playfair = 'Playfair Display', serif
font-family-lato = 'Lato', sans-serif
header-height = 110px
footer-height = 50px
nav-button-height = 250px

*
  box-sizing border-box

p
  margin 0

a
  text-decoration none

  &:visited
    color: inherit

.clearfix
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

html, body
  width 100%
  height 100%
  font-size 16px

.header
  width 100%
  height 110px

  background green

.content
  overflow hidden
  width 100%
  min-height 600px
  height "calc(100% - %s)" % (header-height  + footer-height)

  .part
    float left
    width 50%
    height 100%

    transform-style preserve-3d

    nav
      position relative
      top 50%
      transform translateY(-50%)

      a
        display inline-block
        width 150px
        height nav-button-height
        font-family font-family-playfair
        font-style italic
        font-size 1.5em
        text-align center
        color #fff

    &.content-left
      nav
        float right
        background blue

    &.content-right
      nav
        float left
        background red

.footer
  width 100%
  height 50px

  background orange