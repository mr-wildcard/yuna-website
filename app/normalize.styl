html
  font-family sans-serif
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%

body
  margin 0

footer,
header,
nav,
section
  display block

a
  background-color transparent

a:active,
a:hover
  outline 0

h1
  font-size 2em
  margin 0.67em 0

img
  border 0

svg
  &:not(:root)
    overflow hidden